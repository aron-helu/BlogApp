
<% @users.each do |user| %>
  <div class='user-card'>
    <div class='img container' >
    <img src ='<%= user.photo %>' alt='user_image'  />
    </div>
    <div class='user-card img'>
      <h2>Name: <%= user.name %></h2>
      <h3 class='user-container'>Number of posts:<%= user.posts_counter %></h3>
       <button>
          <a href='/users/<%= user.id %>'> User Details </a>
       </button>
    </div>
  </div>
<% end %>

   